import java.util.Scanner;

public class BinaryGap {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int N = scanner.nextInt();
		int i = 0 , rest = 0;
		int mok = N;
		int arr[] = new int[5];
		do{
			rest = mok % 2;
			mok = N / 2;
			arr[i] = rest;
			i++;
		}while(mok != 0 || mok != 1);
		
		for(int j=0;j<arr.length;j++){
			System.out.print(arr[j]);
		}
	}
}
