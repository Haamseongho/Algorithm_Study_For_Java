package algorithm_week1;

import java.util.Scanner;

public class min_max_algorithm {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.println("입력할 수 갯수");
		int num = sc.nextInt();
		int val[] = new int[num];
		int cb = 0;
		int temp;
		int max = 0,min = 0;

		while (num > 0) {
			val[cb] = sc.nextInt();
			cb++;
			num--;
		}
		while (num > 0) {
			if (val[cb] > val[cb + 1]) {
				min = MinItems(val[cb],val[cb+1]);
			}else if(val[cb] < val[cb+1]){
				max = MaxItems(val[cb],val[cb+1]);
			}
			cb++;
		}
		System.out.println("최소값:"+ min);
		System.out.println("최대값:"+ max);
	}

	private static int MinItems(int i, int j) {
		return i;
	}
	private static int MaxItems(int i, int j) {
		return j;
	}
}
