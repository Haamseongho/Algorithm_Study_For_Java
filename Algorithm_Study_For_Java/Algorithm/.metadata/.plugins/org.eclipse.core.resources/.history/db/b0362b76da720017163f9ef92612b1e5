import java.util.ArrayList;

public class Solution {
	private ArrayList<Integer> arrList;
	int i = 0;

	Solution() {
		arrList = new ArrayList<>();
	}

	public int solution(int N) {
		if (N / 2 == 0) {
			arrList.add(i, 0);
		} else {
			arrList.add(i, N % 2);
			i++;
			solution(N % 2);
		}
	}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
	}

}
