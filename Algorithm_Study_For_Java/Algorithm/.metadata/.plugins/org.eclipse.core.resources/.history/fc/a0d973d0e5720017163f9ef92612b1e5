public class BinaryGap2 {
	static int solution(int N) {
        
    	String binary = "";
    	int max = 0;
    	int count = 0;
    	
    	while (N > 0) {
    		int a = N % 2;
    		N = N / 2;
    		binary = a + binary;
    	}
    	
    	for (int i=0; i<binary.length(); i++) {
    		if (binary.charAt(i) == '0')
    			count++;
    		else {
    			if (max < count)
    				max = count;
    			count = 0;
    		}
    	}
    	
    	return max;
    }
	
	public static void main(String[] args) {
		System.out.println(solution(7));
	}

}